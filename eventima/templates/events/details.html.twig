{% extends 'base.html.twig' %}

{% block title %}Hello EventsController!{% endblock %}

{% block body %}
<div class="container">
    if you see this, details works
    <div class="card mb-3">
        <div class="row g-1">
            <div class="col-md-4">
            <img src="{{events.eventImg}}" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{events.eventName}}</h5>
                    <p class="card-text">{{events.eventDescr}}</p>
                    <p class="card-text"><small class="text-muted">{{events.dateTime | date('d/m/Y')}}</small></p>
                    <p class="card-text"><small class="text-muted">{{events.dateTime | date('H:i')}}</small></p>

                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
